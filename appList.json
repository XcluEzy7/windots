				{ "packageName": "poppler" },
				{ "packageName": "shfmt" },
				{ "packageName": "speedtest-cli" },
				{ "packageName": "bitwarden-cli" },
				//{ "packageName": "spotify-tui" },
				{ "packageName": "starship" },
				{ "packageName": "neovim" },

				{ "packageName": "wget" },
				{ "packageName": "yazi" },
				{ "packageName": "yq" },
				{ "packageName": "zoxide" },

				// Development tools management (e.g: NodeJS, Java,...)
				{ "packageName": "mise" },
				// { "packageName": "vfox" },
				{ "packageName": "pnpm" },
				{ "packageName": "uv" },
				//{ "packageName": "nodejs-lts" },
				{ "packageName": "nvm" },

				// CI/CD tools
				//{ "packageName": "aws" },
				{ "packageName": "restic" },
				{ "packageName": "task" },
				{ "packageName": "trivy" },
				{ "packageName": "kubectl" },
				{ "packageName": "opentofu" },
				{ "packageName": "microk8s" },
				{ "packageName": "pskubectlcompletion" },

				// Sysinternal Suites
				{ "packageName": "process-explorer", "packageScope": "global" },
